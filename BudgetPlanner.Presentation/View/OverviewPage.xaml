<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetPlanner.Presentation.View.OverviewPage"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:viewmodel="clr-namespace:BudgetPlanner.Presentation.ViewModel"
             x:DataType="viewmodel:OverviewViewModel"
             xmlns:local="clr-namespace:BudgetPlanner.Presentation.Model"
             Title="OverviewPage">
    <ScrollView>
        <VerticalStackLayout>
            <Picker Grid.Row="2"   Title="Zeitintervall" SelectedIndex="0"    ItemsSource="{Binding PeriodItems}" SelectedItem="{Binding SelectedPeriod}" />
            <micro:ChartView Chart="{Binding OverviewChart}" HeightRequest="500" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>